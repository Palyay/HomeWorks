<Window x:Class="Task17_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task17_2"
        mc:Ignorable="d"
        Title="Светофор" Height="470" Width="170">
    <Grid>
        <Button 
             Content="Next" 
             HorizontalAlignment="Center"
             VerticalAlignment="Bottom"
             Margin="0,0,0,20"
             Width="100" 
             Height="30"
             FontSize="16"
             Click="Button_Click"/>     
        <Ellipse 
            Name="Top"
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,30,0,0" 
            Height="100"
            Width="100"
            Stroke="Black"             
            Fill="Gray"/>
        <Ellipse 
            Name="Center"
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,150,0,0"
            Height="100"
            Width="100"
            Stroke="Black"             
            Fill="Gray" />
        <Ellipse 
            Name="Bottom"
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"             
            Margin="0,270,0,0" 
            Height="100" 
            Width="100"
            Stroke="Black"             
            Fill="Green"/>
    </Grid>
</Window>
