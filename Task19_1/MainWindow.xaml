<Window x:Class="Task19_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task19_1"
        mc:Ignorable="d"
        Title="Выбор курса" Height="800" Width="450">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Label Content="Имя студента:" FontSize="14" />
            <TextBox x:Name="NameTextBox"/>

            <Label Content="Факультет:" FontSize="14"/>
            <ComboBox  x:Name="FacultyComboBox" IsEditable="True" SelectedIndex="-1" >
                <TextBlock> Программирование</TextBlock>
                <Separator/>
                <TextBlock> Дизайн</TextBlock>
                <Separator/>
                <TextBlock> Менеджмент</TextBlock>
            </ComboBox>

            <Label Content="Доступные курсы:" FontSize="14" />
            <ListBox x:Name="СourseListBox" SelectionMode="Single">
                <ListBoxItem Content="Основы C#" FontSize="14"/>
                <Separator/>
                <ListBoxItem Content="WPF" FontSize="14"/>
                <Separator/>
                <ListBoxItem Content="Плагины для Revit" FontSize="14"/>
            </ListBox>

            <Label Content="Форма обучения:" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="FormaRadioButton1" Content="очно        " IsChecked="True"/>
                <RadioButton x:Name="FormaRadioButton2" Content="заочно" FontSize="14"/>
            </StackPanel>

            <Label Content="Желаемое количество часов в неделю:" Margin="0,10,0,0" FontSize="14"/>
            <Slider x:Name="TimeSlider"
                    Minimum="0" Maximum="40" Value="20"
                    Margin="0,0,0,10" TickPlacement="Both" 
                    LargeChange="2" AutoToolTipPlacement="BottomRight" SmallChange="1"
                    TickFrequency="20" Cursor="Hand" SelectionEnd="40" FontSize="14" Background="#00000000" Foreground="#FF191313"/>
            <Grid>
                <TextBlock HorizontalAlignment="Left" Text="0"/>
                <TextBlock HorizontalAlignment="Center" Text="20"/>
                <TextBlock HorizontalAlignment="Right" Text="40"/>
                </Grid>

                <CheckBox x:Name="MailingCheckBox" 
                      Content="Я согласен на обработку данных"                      
                      IsChecked="False"
                      Checked="CheckBox_Checked"
                      Margin="0,10,0,5" 
                      FontSize="14"/>

            <Button x:Name="SaveButton"
                    Content="Записаться" 
                    Padding="3" 
                    VerticalAlignment="Bottom" 
                    Click="SaveButton_Click"/>

        </StackPanel>

    </Grid>
</Window>
